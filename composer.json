{
    "name": "heitorforner/pagarme-magento2",
    "license": "MIT",
    "version": "2.3.2",
    "type": "magento2-module",
    "description": "Fork of Magento 2 Module Pagar.me",
    "require": {
        "php": ">=7.1",
        "heitorforner/pagarme-ecommerce-module-core": "2.3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.1.0",
        "squizlabs/php_codesniffer": "2.8.1",
        "phpmd/phpmd": "@stable",
        "pdepend/pdepend": "2.2.2",
        "sjparkinson/static-review": "~4.1",
        "fabpot/php-cs-fixer": "~1.2",
        "lusitanian/oauth": "~0.3 <=0.7.0",
        "phpunit/phpunit-selenium": ">=1.2",
        "sebastian/phpcpd": "^2.0",
        "satooshi/php-coveralls": "^1.0",
        "phpdocumentor/phpdocumentor": "^2.8",
        "magento-ecg/coding-standard":"dev-master",
        "rregeer/phpunit-coverage-check": "^0.1.3"
    },
    "authors":[
        {
            "name":"Pagarme Open Source Team, fork by Heitor Forner"
        }
    ],
    "scripts": {
        "test": "phpunit"
    },
    "autoload": {
        "files": [
            "registration.php"
        ],
        "psr-4": {
            "Pagarme\\Pagarme\\": ""
        }
    },
    "config":{
        "secure-http":false
    }
}
